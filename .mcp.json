{
  "mcpServers": {
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@latest"],
      "description": "Documentation search and retrieval for libraries and frameworks",
      "enabled": false
    },
    "puppeteer": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-puppeteer"],
      "description": "Browser automation for end-to-end testing",
      "enabled": false
    },
    "github": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      },
      "description": "GitHub issue and PR management",
      "enabled": false
    },
    "postgres": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-postgres"],
      "env": {
        "DATABASE_URL": "${DATABASE_URL}"
      },
      "description": "PostgreSQL database access",
      "enabled": false
    },
    "filesystem": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "${PROJECT_ROOT}"
      ],
      "description": "Extended filesystem access",
      "enabled": false
    }
  },
  "_readme": {
    "usage": "Set 'enabled: true' for servers you want to activate",
    "environment": "Replace ${VAR} placeholders with actual values or set in environment",
    "debug": "Run 'claude --mcp-debug' to troubleshoot connection issues"
  }
}
